<%= link_to "Create Category", new_admin_category_path %>
<p id="notice"><%= notice %></p>

<h1>Listing categories</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			

			<td><%= link_to "delete",admin_category_path(category.id), method: :delete %></td>
		<td><%=  link_to "sub cat",admin_category_sub_categories_path(category.id) %></td>
		</tr>
		<% end %>
	</tbody>
</table>