  <div class="field">
    <%= select_tag :sub_category_id, options_for_select([["Select Sub Category",""]] + @sub_categories.map {|c| [c.name, c.id]}), :onchange => "select_load_subsubcat(this.value)"  %>
  </div>

<div class="load_subsubcat"></div>


  <script>
	function select_load_subsubcat(val){
		$.ajax({
			url: "/admin/products/load_subsubcat?subcategory_id=" + val,
	});
	}
	</script>